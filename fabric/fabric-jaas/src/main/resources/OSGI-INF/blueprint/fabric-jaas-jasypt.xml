<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="
           http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <bean id="encryptor"
          class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
        <!--Injects the Encryptor Configuration object as an OSGi service so that it can be completely replaced by user bundles-->
        <property name="config" ref="encryptorConfigRef" />
    </bean>

    <!--Instantiate the ConfigAdmin interceptor to decrypt tokens on the fly-->
    <bean id="configPlugin"
          class="io.fabric8.jaas.EncryptableConfigurationPlugin">
        <property name="encryptor" ref="encryptor"/>
    </bean>

    <!--Expose all the objects used for encryption as OSGi services, in case subcomponent may need them.-->
    <service id="ConfigPluginService" ref="configPlugin"
             interface="org.osgi.service.cm.ConfigurationPlugin"/>


    <service id="EncryptorService" ref="encryptor"
             interface="org.jasypt.encryption.StringEncryptor" />

    <!--Injects the Encryptor Configuration object as an OSGi service so that it can be completely replaced by user bundles-->
    <reference id="encryptorConfigRef" interface="org.jasypt.encryption.pbe.config.PBEConfig"  />

</blueprint>